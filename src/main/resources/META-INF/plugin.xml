<idea-plugin>
    <id>by.shareiko.test-utils</id>
    <name>Test Utils</name>
    <vendor>Pavel Shareika</vendor>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.java</depends>
    <depends>com.intellij.modules.lang</depends>

    <actions>
        <action class="by.shareiko.testutils.extension.TestDataBuilderGenerationAction"
                text="Create Test Data Builder">
            <keyboard-shortcut first-keystroke="ctrl BACK_SLASH" second-keystroke="ctrl G" keymap="$default"/>
            <add-to-group group-id="GenerateGroup"/>
        </action>
    </actions>
</idea-plugin>